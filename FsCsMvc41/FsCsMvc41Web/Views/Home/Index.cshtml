@model FsWeb.Controllers.IndexModel

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<body>
    <div id="contentWrap">
		<h1>A Dangerous Maze</h1>
    <div id="mazeContainer">
    <svg id="maze" height="@Model.MazeHeight" width="@Model.MazeWidth" xmlns="http://www.w3.org/2000/svg"> 
        <g>
            <circle id="circle" cx="10" cy="10" r="4"></circle>
            <circle id="sprite2" cx="@(Model.MazeWidth - 10)" cy="@(Model.MazeHeight-10)" r="4"></circle>
        </g>
    </svg>
    </div>
        <div id="footer">
			<p>Want to come back to this specific maze? <br /><a href="@Url.Action("Index", new { Model.Seed })">Click here</a></p>
		</div><!-- END FOOTER -->
    </div><!-- END CONTENTWRAP -->

	
    <script type="text/javascript" src="~/Scripts/jquery-1.6.4-vsdoc.js"></script>
    <script type="text/javascript" src="http://d3js.org/d3.v2.js"></script>
    <script type="text/javascript" src="~/Scripts/script.js"></script>
    <script type="text/javascript">
        doMaze('@Url.Action("Maze", new{Model.Seed})');
    </script>
</body>
</html>
